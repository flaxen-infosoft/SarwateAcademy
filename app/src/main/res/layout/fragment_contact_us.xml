<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.userFragments.ContactUsFragment"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/purple_700"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/back_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Us"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/purple_500"
                    android:layout_gravity="center_vertical"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/callUsImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/contact_icon"
                    android:backgroundTint="@color/purple_500"
                    android:layout_gravity="end|center_vertical"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>





        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Us"
            android:padding="3dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2B2B2B"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="15"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/facebookCardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/facebookImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/facebook_icon"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/twitterCardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/twitterImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/twitter"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/googlePcardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/googlePimageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/googlep_icon"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="15"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/instagramCardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/instagramImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/instagram"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/linkedInCardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/linkedInImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/linkedin"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/youtubeCardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="15dp"
                android:layout_weight="3">



                <ImageView
                    android:id="@+id/youtubeImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/youtube"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="20dp"/>




            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:padding="3dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2B2B2B"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail : "
                android:textSize="17sp"
                android:textColor="#343434"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sarwateacademy40@gmail.com"
                android:textSize="17sp"
                android:textColor="#343434"/>

        </LinearLayout>

    </LinearLayout>
</layout>