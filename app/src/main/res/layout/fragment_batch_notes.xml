<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.userFragments.MyCourseFragment">


        <LinearLayout
            android:id="@+id/no_notes_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/curve_corner_edittext_background"
            android:backgroundTint="#439E9E9E"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerInParent="true"
            >

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/item_not_availabe_icon"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="No Notes found !"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notes_course_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp" />

    </RelativeLayout>
</layout>